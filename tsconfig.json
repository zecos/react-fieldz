{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "outDir": "dist",
    "lib": ["es2019", "dom"],
    "sourceMap": true,
    "noEmitOnError": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "declaration": true
  },
  "files": [
    "src/lib.ts"
  ],
  "include": [
    "**/*.test.tsx"
  ],
}